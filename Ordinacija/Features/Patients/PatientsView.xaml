<Window x:Class="Ordinacija.Features.Patients.PatientsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" Title="Patients"
             Height="450" Width="800">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,10">
            <Button Content="Dodaj pacijenta"
                    Padding="10,5"
                    Background="#0078D7"
                    Foreground="White"
                    FontWeight="Bold"
                    BorderBrush="Transparent"
                    Cursor="Hand"
                    Width="150"
                    Height="35"
                    Click="AddPatient_Click"/>

            <Rectangle Width="10"/>

            <Grid Width="300">
                <TextBlock
                Foreground="Gray"
                FontSize="14"
                VerticalAlignment="Center"
                Padding="12,0,0,0"
                IsHitTestVisible="False"/>

                <!-- Search TextBox -->
                <TextBox Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                Foreground="Black"
                FontSize="14"
                Padding="8"
                Background="White"
                BorderBrush="Gray"
                VerticalContentAlignment="Center"/>
            </Grid>
        </StackPanel>

        <!-- Patient Table -->
        <ListView x:Name="PatientsListView" SelectionMode="Single" Grid.Row="1" ItemsSource="{Binding FilteredPatients}" SelectedItem="{Binding SelectedPatient, Mode=TwoWay}" Margin="0">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Patient Name" DisplayMemberBinding="{Binding FirstName}" Width="230"/>
                    <GridViewColumn Header="Last Name" DisplayMemberBinding="{Binding LastName}" Width="230"/>
                    <GridViewColumn Header="Date of Birth" DisplayMemberBinding="{Binding DateOfBirth}" Width="230"/>

                    <GridViewColumn Width="80">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <!-- Edit Button -->
                                    <Button Padding="5"
                                            Background="Transparent"
                                            BorderBrush="Transparent"
                                            Cursor="Hand"
                                            Click="EditPatient_Click"
                                            CommandParameter="{Binding}">
                                        <TextBlock FontFamily="Segoe MDL2 Assets"
                                            Text="&#xE104;"
                                            FontSize="16"
                                            Foreground="Black"/>
                                    </Button>

                                    <!-- Medical Info Button -->
                                    <Button Padding="5"
                                            Background="Transparent"
                                            BorderBrush="Transparent"
                                            Cursor="Hand"
                                            Click="OpenMedicalReports_Click"
                                            CommandParameter="{Binding}">
                                        <TextBlock FontFamily="Segoe MDL2 Assets"
                                            Text="&#xE130;" 
                                            FontSize="16"
                                            Foreground="Black"/>
                                    </Button>
                                </StackPanel>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
