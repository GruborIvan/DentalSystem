<Window x:Class="Ordinacija.Features.ReportPrint.AddNewUZView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ordinacija.Features.ReportPrint"
        mc:Ignorable="d"
        Title="AddNewUZView" WindowState="Maximized"
        Background="#F5F5F5">
    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Editable Text Box -->
        <Border Background="White" CornerRadius="10" Padding="20" Margin="0 0 0 20">
            <TextBox Name="SchemaTextBox"
                     Text="{Binding UZ_Results, UpdateSourceTrigger=PropertyChanged}"
                     AcceptsReturn="True"
                     TextWrapping="Wrap"
                     VerticalScrollBarVisibility="Auto"
                     FontSize="16"
                     FontFamily="Segoe UI"
                     Foreground="Black"
                     Background="Transparent"
                     BorderThickness="0"/>
        </Border>

        <!-- Buttons -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0 30 0 20">
            <Button Name="SaveButton"
                    Content="Sačuvaj"
                    Width="160"
                    Height="50"
                    Background="#4CAF50"
                    Foreground="White"
                    BorderBrush="Transparent"
                    FontSize="18"
                    FontWeight="Bold"
                    Cursor="Hand"
                    Command="{Binding SaveReportCommand}"/>

            <Button Name="CancelButton"
                    Content="Otkaži"
                    Width="160"
                    Height="50"
                    Background="#F44336"
                    Foreground="White"
                    BorderBrush="Transparent"
                    FontSize="18"
                    FontWeight="Bold"
                    Cursor="Hand"
                    Command="{Binding CancelCommand}"
                    Margin="20 0 0 0"/>
        </StackPanel>
    </Grid>
</Window>
