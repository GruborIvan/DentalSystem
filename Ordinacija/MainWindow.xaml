<Window x:Class="Ordinacija.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ordinacija"
        mc:Ignorable="d"
        Title="Main Window" Height="450" Width="800">
    <Grid>
        <ContentControl Content="{Binding CurrentView}" />
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" Orientation="Horizontal" Margin="10">
            <Button Name="PatientsButton" Content="Patients" Command="{Binding ShowPatientsViewCommand}" Margin="5" Height="46" Width="75" Click="PatientsButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
